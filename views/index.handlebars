<h1>BURGERS</h1>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            <li>
                {{burger_name}} <button class="deleteBtn" attr={{id}}>Delete</button>
            </li>
        {{/unless}}
    {{/each}}
</ul>


<ul>
    {{#each burgers}}
        {{#if devoured}} 
            <li>{{burger_name}} burger </li>
        {{/if}}
    {{/each}}
</ul>


<h3>Add a BURGER</h3>
<form class="create-form">
    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>
<button id="burgerSubmit" type="submit">Add Burger</button>
</form>